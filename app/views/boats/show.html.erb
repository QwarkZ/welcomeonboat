<div class="container-boat-show">
      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="brick1">
            <div class="img-boat" style="background-image: url(<%= cl_image_path @boat.photo.key, crop: :scale %>);">
            </div>
            <p><%= @boat.description.truncate(800) %></p>
            </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="brick2 pt-4">
            <div class="small-description"></div>
              <div class="boat-name pl-2">
                <h2><%= @boat.title %></h2>
              </div>
              <div class="boat-category-adress pl-2">
                <p>📍<%= @boat.address %></p>
                <p class="category"><%= category(@boat.category) %> <%= @boat.category %></p>
              </div>
              <div>
                <p class="card-boat-pricing-show pl-2">💰 <%= @boat.price_per_day %> € <span>/ jour</span></p>
              </div>
              <div class="separation info-owner">
                <div class="identity pl-2"> <%= cl_image_tag @boat.owner.photo.key, crop: :fill, class: "avatar" %> Proposé par <%= @boat.owner.first_name %><span class="comment pl-2">⏰ Répond en moins de <%= rand(1..5) %>h</span></div>
    
              </div>
            <div class="formulaire-reservation separation">
              <div class="container mt-4">
                <%= render "bookings/form", booking: @booking, boat: @boat  %>
                <p class="ml-1">🔥 <%= rand(1..1500) %> personnes ont vu ce bateau cette semaine.</p>
              </div>
              <div class="mt-2">
              </div>
              <div class="d-flex justify-content-end">

              <%= link_to "Continuer mes recherches", boats_path, class: "btn btn-show-continue mt-4 mb-4" %>
              </div>
            </div>  
        </div>
      </div>
    </div>
</div>













